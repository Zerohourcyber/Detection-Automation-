# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@company.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=security-alerts@company.com

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=detection_lab
POSTGRES_USER=detection_user
POSTGRES_PASSWORD=detection_password

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-super-secret-api-key-change-this-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/automation.log
MAX_LOG_SIZE=100MB
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
ENABLE_TLS=true
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key
VERIFY_SSL=true
REQUEST_TIMEOUT=30

# -----------------------------------------------------------------------------
# Automation Settings
# -----------------------------------------------------------------------------
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300
RETRY_ATTEMPTS=3
RETRY_DELAY=5
ENABLE_AUTO_REMEDIATION=false
ENABLE_NOTIFICATIONS=true

# -----------------------------------------------------------------------------
# Detection Rules Settings
# -----------------------------------------------------------------------------
RULES_UPDATE_INTERVAL=3600
ENABLE_CUSTOM_RULES=true
MITRE_ATTACK_VERSION=v12.1
SIGMA_RULES_PATH=/app/rules/sigma
WAZUH_RULES_PATH=/var/ossec/etc/rules/custom

# -----------------------------------------------------------------------------
# Monitoring & Metrics
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=60

# -----------------------------------------------------------------------------
# Development Settings (Remove in Production)
# -----------------------------------------------------------------------------
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_SWAGGER_UI=true